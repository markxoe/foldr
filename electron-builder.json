{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "productName": "Explorer Switcher",
  "appId": "org.toastbrot.explorer-switcher",
  "copyright": "Copyright Â© 2021 Mark Oude Elberink",
  "publish": {
    "provider": "github",
    "repo": "explorer-switcher",
    "owner": "markxoe"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64", "ia32"]
      }
    ]
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg"
      }
    ]
  },
  "dmg": {
    "artifactName": "${productName}-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "artifactName": "${productName}-${version}-Setup.${ext}"
  },
  "portable": {
    "artifactName": "${productName}-${version}-Portable.${ext}"
  }
}
